---
import Layout from '../components/Layout.astro';
import Card from '../components/ui/Card.astro';
import DailyReportSection from '../components/DailyReportSection.astro';
import IconUser from '../components/icon/IconUser.astro';
import IconLink from '../components/icon/IconLink.astro';

const userName = "山田太郎";
const avatarURL = Astro.locals.user.avatar_url;
---

<Layout title="ホーム" avatarURL={avatarURL}>
  <div class="page-container">
    <header class="page-header">
      <h1 class="greeting">こんにちは、{userName}さん</h1>
      <p class="sub-greeting">今日も一日お疲れ様です。まずは今日のリフレクションから始めましょう。</p>
    </header>

    <DailyReportSection />

    <section class="settings-section">
      <h2 class="section-title">設定</h2>
      <div class="settings-grid">
        <Card>
          <a href="/settings/user" class="setting-card-link">
            <div class="setting-card-icon">
              <IconUser />
            </div>
            <div class="setting-card-content">
              <h3 class="setting-card-title">ユーザー設定</h3>
              <p class="setting-card-description">プロフィール情報や通知設定を管理します。</p>
            </div>
          </a>
        </Card>
        <Card>
          <a href="/settings/integration" class="setting-card-link">
            <div class="setting-card-icon">
              <IconLink />
            </div>
            <div class="setting-card-content">
              <h3 class="setting-card-title">連携設定</h3>
              <p class="setting-card-description">SlackやGitHubとの連携を管理します。</p>
            </div>
          </a>
        </Card>
      </div>
    </section>

  </div>
</Layout>

<style>
  .page-container {
    padding: 2rem;
    height: 100%;
    overflow-y: auto;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .greeting { font-size: 1.875rem; font-weight: 700; color: var(--color-gray-800); }
  .sub-greeting { font-size: 1rem; color: var(--color-gray-600); margin-top: 0.25rem; }

  /* DailyReportSectionにマージンを設定 */
  :global(.page-container > .card) {
    margin-bottom: 2.5rem;
  }
  
  .settings-section {
    padding-top: 1rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-gray-800);
    margin-bottom: 1.5rem;
  }

  .settings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  /* Cardコンポーネントの中のaタグを、カード全体に広げるためのスタイル */
  .setting-card-link {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    text-decoration: none;
    color: inherit;
    /* Cardのpaddingを相殺して、リンクがカードの端まで届くようにする */
    margin: -2.5rem;
    padding: 2.5rem;
    border-radius: var(--border-radius-lg);
    height: 100%;
    transition: background-color 0.2s ease-in-out;
  }
  
  .setting-card-link:hover {
     background-color: var(--color-gray-50);
  }

  .setting-card-icon {
    flex-shrink: 0;
    background-color: var(--color-blue-100);
    color: var(--color-blue-500);
    width: 48px;
    height: 48px;
    border-radius: var(--border-radius-md);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .setting-card-title { font-size: 1.125rem; font-weight: 600; color: var(--color-gray-800); }
  .setting-card-description { color: var(--color-gray-600); font-size: 0.875rem; margin-top: 0.25rem; }
</style>